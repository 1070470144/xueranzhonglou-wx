{
  "bsonType": "object",
  "required": ["title", "status"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "title": {
      "bsonType": "string",
      "description": "剧本标题",
      "maxLength": 100
    },
    "version": {
      "bsonType": "string",
      "description": "版本号",
      "maxLength": 20
    },
    "author": {
      "bsonType": "string",
      "description": "作者姓名",
      "maxLength": 50
    },
    "description": {
      "bsonType": "string",
      "description": "剧本描述",
      "maxLength": 1000
    },
    "tags": {
      "bsonType": "array",
      "description": "标签数组",
      "items": {
        "bsonType": "string",
        "maxLength": 20
      },
      "maxItems": 10
    },
    "images": {
      "bsonType": "array",
      "description": "剧本图片URL数组",
      "items": {
        "bsonType": "string"
      },
      "maxItems": 3
    },
    "likes": {
      "bsonType": "int",
      "description": "点赞数",
      "minimum": 0,
      "default": 0
    },
    "usageCount": {
      "bsonType": "int",
      "description": "使用次数",
      "minimum": 0,
      "default": 0
    },
    "views": {
      "bsonType": "int",
      "description": "浏览数",
      "minimum": 0,
      "default": 0
    },
    "status": {
      "bsonType": "string",
      "description": "剧本状态",
      "enum": ["draft", "published", "archived"],
      "default": "draft"
    },
    "createTime": {
      "bsonType": "timestamp",
      "description": "创建时间"
    },
    "updateTime": {
      "bsonType": "timestamp",
      "description": "更新时间"
    },
    "createBy": {
      "bsonType": "string",
      "description": "创建者ID"
    },
    "updateBy": {
      "bsonType": "string",
      "description": "最后更新者ID"
    }
  }
}
